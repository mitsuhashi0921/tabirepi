<div class="nested-fields">
	<!-- 何日目かをプルダウンで選択 -->
  <div class="newday">
  	<%= f.number_field :day, min: 1 %>日目
    <button type="button" class="btn btn-outline-warning btn-sm">
      <%= link_to_remove_association "remove day", f, class: "btn btn-warning btn-xs" %>
    </button></br></br>
  </div>
    <div id="parents">
      <%= f.fields_for :stays do |stay| %>
        <%= render 'stay_fields', f: stay %>
      <% end %>
    </div>
    <div id="links">
        <%= link_to_add_association 'add stays', f, :stays, class: "btn btn-primary btn-xs" %></br></br>
    </div>
</div>