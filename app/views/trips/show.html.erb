<div class="container">
  <div class="row">
    <div class="col-md-5">
          <div class="margin-bottom">
            <b style="font-size:35px;"><%= @trip.title %></br></b>
            <b style="font-size:28px;"><%= @trip.subtitle %><br></b>
          </div>

          <!-- いいね機能 -->
          <div class="like">
            <% if enduser_signed_in? %>
              <% if @trip.liked_by?(current_enduser) %>
                  <%= link_to trip_likes_path(@trip), method: :delete do %>
                    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                    <span class="glyphicon glyphicon-heart" aria-hidden="true"> <%= @trip.likes.count %>
                  <% end %>
              <% else %>
                  <%= link_to trip_likes_path(@trip), method: :post do %>
                    <i class="fa fa-heart-o" aria-hidden="true"></i>
                    <span class="glyphicon glyphicon-heart" aria-hidden="true"> <%= @trip.likes.count %>
                  <% end %>
              <% end %>
            <% else %>
              <span class="glyphicon glyphicon-heart" aria-hidden="true"> <%= @trip.likes.count %>
            <% end %>
          </div>

         <div class="tripdata">
           <% @trip.days.each do |day| %>
             <% day.stays.each do |stay| %>
                 <b style="font-size:20px;"><%= day.day %>日目</br></b>
                 <%= stay.time.strftime("%R") %>
                 <%= stay.status %>
                 <%= stay.country %></br>
                 <%= stay.place %>
                 <%= stay.money %>¥</br>
                 <%= stay.comment %></br>
               <% stay.images.each do |image| %>
                 <%= attachment_image_tag image, :image, :fill, 200, 200 %>
               <% end %>
             <% end %>
           <% end %>
         </div>

        <div class="tripshowbtn">
          <% if enduser_signed_in? %>
            <% if current_enduser.id == @enduser.id %>
              <td><%= link_to "編集", edit_trip_path(@trip), class: "btn btn-success btn-xs" %></td>
              <td><%= link_to "削除", trip_path, model: @trip, method: :delete, data: { confirm: 'Are you sure?' }, class: "pull-danger", class: "btn btn-danger btn-xs" %></td>
            <% end %>
          <% else %>
          <% end %>
        <%= link_to "一覧画面に行く", trips_path, class: 'btn btn-default' %>
        </div>

    </div>
      <div class="col-md-7">
        <%= render :partial => "mapreader" %>
      </div>
  </div>
</div>