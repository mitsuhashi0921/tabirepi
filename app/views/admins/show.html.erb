<div class="container">
  <div class="row">
  	<h1><%= @enduser.name %>の詳細ページ</h1>
    <div style="padding: 5px; margin-top: 20px; margin-bottom: 10px; border: 1px solid #00008B; border-radius: 10px;">
      <table class="table table-striped">
        <tbody>
        	<%= attachment_image_tag @enduser, :profile_image, :fill, 128, 128, class: "img-circle profile-thumb", fallback: "no_image100.jpg"%>
          <tr style="background-color:#f5f5f5">
	          <th><p>お名前</p></th>
	          <th><p>メールアドレス</p></th>
	      </tr>
	      <tr style="background-color:#f5f5f5">
	          <th><%= @enduser.name %></th>
      	      <th><%= @enduser.email %></th>
          </tr>
        </tbody>
      </table>
      <% if admin_signed_in? %>
       <div class="field">
        <%= link_to "強制退会", admin_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "pull-denger", class: "btn btn-danger btn-xs" %>
       </div>
      <% end %>
    </div>

    <div class="row">
      <div class="trip">
        <table class="table table-respansive">
          <table class="table table-hover">
            <% @trips.each do |trip| %>
              <tr>
                <td><%= link_to trip.title, trip_path(trip.id) %></td>
                <td><%= trip.subtitle %></td>
                <td><span class="glyphicon glyphicon-heart" aria-hidden="true"> <%= trip.likes.count %></td>
                <td><%= attachment_image_tag trip.enduser, :profile_image, :fill, 50, 50, class: "img-circle profile-thumb", fallback: "no_image.jpg"%></td>
                <td><%= trip.enduser.name %></td>
      </div>
              </tr>
          <% end %>
          </table>
        </table>
    </div>
      <div class="paginate" style="font-size: 20px">
        <%= paginate(@trips) %>
      </div>

  </div>
</div>